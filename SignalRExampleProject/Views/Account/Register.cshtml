@model SignalRExampleProject.ViewModels.RegisterViewModel

<div class="container">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-4">
                <input asp-for="UserName" />
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <label asp-for="Password"></label>
            </div>
            <div class="col-4">
                <input asp-for="Password" />
            </div>
        </div>
        <button type="submit">Submit</button>
    </form>
</div>