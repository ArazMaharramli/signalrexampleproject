@model SignalRExampleProject.ViewModels.ChatViewModel

<div class="container">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">Receiver</div>
        <div class="col-4">
            <label>@Model.ReceiverName</label>
        </div>
    </div>
    <div class="row">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" id="messageInput" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="hidden" asp-for="ReceiverId" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

@section Scripts{
    <script>function getReceiverId() {
            return $('#ReceiverId').val();
        };</script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
