@model SignalRExampleProject.ViewModels.IndexViewModel

<div class="container">
    <div class="row">&nbsp;</div>
    @foreach (var item in Model.Users)
    {

        <div class="row">
            <div class="col-2">Messages</div>
            <div class="col-4">
                <a asp-controller="Home" asp-action="Chat" asp-route-user="@item.Id">@item.UserName</a>
            </div>

            <div class="row">
                <div class="col-12">
                    <hr />
                </div>
            </div>
        </div>
    }
</div>